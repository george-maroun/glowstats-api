generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model FarmsWeeklyMetrics {
  id            String @id @default(cuid())
  week          Int
  powerOutput   Float
  carbonCredits Float

  @@map("farms_weekly_metrics")
}

model WeeklyUSDCRewards {
  id          String @id @default(cuid())
  week        Int
  USDCRewards Float

  @@map("weekly_usdc_rewards")
}

model WeeklyDataByMonitor {
  id            String @id @default(cuid())
  week          Int
  monitorId     Int
  powerOutput   Float
  carbonCredits Float
  feePayment    Float

  @@map("weekly_data_by_monitor")
}
